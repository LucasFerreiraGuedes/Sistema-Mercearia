@model Usuario

@{
    ViewData["Title"] = "Cadastrar novo usuário";
}

<h1>Cadastrar Usuário</h1>


<form asp-controller="Usuario" asp-action="CadastroUsuario" method="post" >
    <div class="form-group">
        <label for="Name" class="form-label">Nome</label>
        <input type="text" required="true" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="Email" class="form-label">E-mail</label>
        <input type="email" required="true" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="Telefone" class="form-label">Telefone</label>
        <input type="text" class="form-control" asp-for ="Telefone">
    </div>
    <div class="form-group">
        <label for="Senha" class="form-label">Senha</label>
        <input type="password" class="form-control" asp-for="Senha">
    </div>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            UF
        </button>
        <ul class="dropdown-menu" asp-for="UF">
            <li><a class="dropdown-item" href="#">MG</a></li>
            <li><a class="dropdown-item" href="#">SP</a></li>
            <li><a class="dropdown-item" href="#">RJ</a></li>
        </ul>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>