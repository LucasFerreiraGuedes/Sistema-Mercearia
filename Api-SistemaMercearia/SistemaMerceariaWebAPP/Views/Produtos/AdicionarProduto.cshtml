@model SistemaMerceariaWebAPP.Models.Produto

@{
    ViewData["Title"] = "Adicionar novo Produto";
}

<h1>Adicionar Produto</h1>

<h4>Produtos</h4>
<hr />
<form asp-controller="Produtos" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="codigo" class="form-label">Código</label>
        <input type="number" required="true" asp-for="Codigo" class="form-control">
    </div>
    <div class="form-group">
        <label for="Descricao" class="form-label">Descrição</label>
        <input type="text" required="true" asp-for="Descricao" class="form-control">
    </div>
    <div class="form-group">
        <label for="marca" class="form-label">Marca</label>
        <input type="text" required="true" asp-for="Marca" class="form-control">
    </div>
    <div class="form-group">
        <label for="valor" class="form-label">Valor</label>
        <input type="number" required="true" asp-for="Valor" class="form-control">
    </div>
    <div class="form-group">
        <label for="estoque" class="form-label">Estoque</label>
        <input type="number" required="true" asp-for="Estoque" class="form-control">
    </div>
    <br />
    <button type="submit" class="btn btn-success btn-block">Salvar</button>
    <a class="btn btn-primary btn-block" asp-controller="Produtos" asp-action="Index">Voltar</a>
</form>

